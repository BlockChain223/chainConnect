script.
  $(document).ready(function() {
    $('#addnodes-table').dataTable({
      autoWidth: true,
      searching: false,
      ordering: false,
      responsive: true,
      lengthChange: true,
      processing: true,
      language: {
        paginate: {
          previous: '<',
          next: '>'
        }
      },
      ajax: {
        url: '/ext/connections',
        dataSrc: function (json) {
          var rows = [];
          for (var i=0; i<json.data.length; i++) {
            rows.push({'nodes':'addnode='+json.data[i]['address']+':'+json.data[i]['port']});
          }
          return rows;
        }
      },
      columns: [
        {data: 'nodes', width: '100%'}
      ],
      columnDefs: [
        {targets: '_all', className: 'text-left'}
      ]
    });
    $('#addnodes2-table').dataTable({
      autoWidth: true,
      searching: false,
      ordering: false,
      responsive: true,
      lengthChange: true,
      processing: true,
      language: {
        paginate: {
          previous: '<',
          next: '>'
        }
      },
      ajax: {
        url: '/ext/connections',
        dataSrc: function (json) {
          var rows = [];
          for (var i=0; i<json.data.length; i++) {
            rows.push({'nodes':'addnode '+json.data[i]['address']+':'+json.data[i]['port']+' onetry'});
          }
          return rows;
        }
      },
      columns: [
        {data: 'nodes', width: '100%'}
      ],
      columnDefs: [
        {targets: '_all', className: 'text-left'}
      ]
    });
  });
